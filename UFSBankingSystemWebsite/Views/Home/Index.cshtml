@{
    ViewData["Title"] = "Welcome to Kovsie Fund Banking";
}

<div class="container text-center text-white mt-5">
    <h1 class="display-4">Welcome to Kovsie Fund Banking</h1>
    <p class="lead">Experience seamless banking tailored for the University of the Free State community. Our platform provides you with the tools to manage your finances effectively and securely.</p>

    <div class="mt-5">
        <h3 class="card-title">Join Us Today!</h3>
        <p class="card-text">Sign up now to unlock the full potential of your banking experience.</p>
        <div class="mt-4">
            <a asp-action="Register" asp-controller="Account" class="btn btn-primary btn-lg me-3">Register</a>
            <a asp-action="Login" asp-controller="Account" class="btn btn-secondary btn-lg">Login</a>
        </div>
        <div class="animation-container">
            <img src="~/images/card.gif" alt="Banking Animation" class="img-fluid" />
        </div>
    </div>
</div>