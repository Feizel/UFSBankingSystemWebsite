@model IEnumerable<UFSBankingSystemWebsite.Models.Transactions>

<h2>Transaction History</h2>

<table class="table table-striped text-white">
    <thead>
        <tr>
            <th>Transaction Date</th>
            <th>Amount</th>
            <th>Status</th>
            <th>From Account</th>
            <th>To Account</th>
            <th>Reference</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var transaction in Model)
            {
                <tr>
                    <td>@transaction.TransactionDate.ToString("g")</td>
                    <td>@transaction.Amount.ToString("C")</td>
                    <td>@(transaction.Status ?? "Pending")</td>
                    <td>@transaction.BankAccountIdSender</td>
                    <td>@transaction.BankAccountIdReceiver</td>
                    <td>@transaction.Reference</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center text-white">No transactions found.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="CustomerDashboard" asp-action="Index" class="btn btn-primary">Back to Dashboard</a>