@model IEnumerable<Notification>

<h1 class="display-4">Your Advice</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Advice</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var advice in Model)
            {
                <tr>
                    <td>@advice.NotificationDate.ToShortDateString()</td>
                    <td>@advice.Message</td>
                    <td>@(advice.IsRead ? "Read" : "Unread")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No advice available at the moment.</p>
}