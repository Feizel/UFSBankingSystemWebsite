@model UFSBankingSystem.Models.ViewModels.CustomerViewModel

<h2>Customer Dashboard</h2>

<h4>Your Accounts</h4>
<table class="table text-white">
    <thead>
        <tr>
            <th>Account Type</th>
            <th>Balance</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.BankAccountType</td>
                <td>@account.Balance</td>
                <td>
                    <a asp-controller="UserDashboard" asp-action="ViewAccount" asp-route-id="@account.Id" class="btn btn-info">View Details</a>
                    <a asp-controller="UserDashboard" asp-action="Withdraw" asp-route-id="@account.Id" class="btn btn-warning">Withdraw</a>
                    <a asp-controller="UserDashboard" asp-action="Transfer" class="btn btn-success">Transfer</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Withdraw" asp-controller="UserDashboard" class="btn btn-danger">Withdraw Funds</a>
    <a asp-action="Transfer" asp-controller="UserDashboard" class="btn btn-primary">Transfer Funds</a>
    <a asp-action="EditProfile" asp-controller="UserDashboard" class="btn btn-warning">Edit Profile</a>
    <a asp-action="ChangePassword" asp-controller="UserDashboard" class="btn btn-secondary">Change Password</a>
</div>

<a href="@Url.Action("EditProfile", "UserDashboard")" class="btn btn-secondary">Edit Profile</a>
<a href="@Url.Action("ChangePassword", "UserDashboard")" class="btn btn-secondary">Change Password</a>




