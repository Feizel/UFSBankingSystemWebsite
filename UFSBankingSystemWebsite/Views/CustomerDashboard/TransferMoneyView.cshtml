@model MoneyTransferViewModel

<h2>Transfer Money</h2>

<form asp-action="TransferMoneyView" asp-controller="Client" method="post">
    <div class="form-group">
        <label>Sender Bank Account:</label>
        <input type="text" value="@Model.SenderBankAccountNumber" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Available Balance:</label>
        <input type="text" value="@Model.AvailableBalance.ToString("C")" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="ReceiverBankAccountNumber">Receiver Account Number</label>
        <input asp-for="ReceiverBankAccountNumber" class="form-control" />
        <span asp-validation-for="ReceiverBankAccountNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Amount">Amount to Transfer</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Transfer</button>
</form>
