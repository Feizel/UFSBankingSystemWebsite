@model IEnumerable<UFSBankingSystem.Models.User>

<h2>View Customer Accounts</h2>

<table class="table text-white">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-controller="FinancialAdvisorDashboard" asp-action="ProvideAdvice" asp-route-userId="@customer.Id" class="btn btn-primary">Provide Advice</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "FinancialAdvisorDashboard")" class="btn btn-secondary">Back to Dashboard</a>