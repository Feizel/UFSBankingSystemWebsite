@model IEnumerable<UFSBankingSystem.Models.User>

<h2>Manage Customers</h2>

<table class="table text-white">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-controller="ConsultantDashboard" asp-action="EditCustomer" asp-route-id="@customer.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="ConsultantDashboard" asp-action="DeleteCustomer" asp-route-id="@customer.Id" class="btn btn-danger">Delete</a>
                    <a asp-controller="ConsultantDashboard" asp-action="ChangePassword" asp-route-id="@customer.Id" class="btn btn-warning">Change Password</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "ConsultantDashboard")" class="btn btn-secondary">Back to Dashboard</a>