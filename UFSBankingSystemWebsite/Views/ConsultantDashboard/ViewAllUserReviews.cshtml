@model IEnumerable<FeedBack>

<h2>User Reviews</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>User Email</th>
                <th>Comment</th>
                <th>Rating</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.UserEmail</td>
                    <td>@review.Message</td>
                    @if (review.Rating >= 3)
                    {
                        <td class="text-success">@review.Rating</td>
                    }
                    else
                    {
                        <td class="text-danger">@review.Rating</td>
                    }

                    <td>@review.FeedbackDate.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reviews available.</p>
}

