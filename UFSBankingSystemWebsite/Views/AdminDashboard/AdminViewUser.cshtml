@model UFSBankingSystemWebsite.Models.ViewModels.Admin.UserViewModel

<div class="container mt-4">
    <div class="card">
        <h3 class="card-subtitle m-4 text-dark">User Details</h3>
    </div>

    <dl class="row">
        <dt class="col-sm-2">First Name</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Last Name</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">ID Number</dt>
        <dd class="col-sm-10">@Model.IDNumber</dd>

        <!-- Add more fields as necessary -->

        <dt class="col-sm-2">Account Number</dt>
        <dd class="col-sm-10">@Model.AccountNumber</dd>

        <dt class="col-sm-2">Balance</dt>
        <dd class="col-sm-10">@Model.Balance.ToString("C")</dd> <!-- Format as currency -->

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.IsActive ? "Active" : "Inactive"</dd>

    </dl>

    <a asp-action="UserManagement" class="btn btn-secondary">Back to Users</a>
</div>