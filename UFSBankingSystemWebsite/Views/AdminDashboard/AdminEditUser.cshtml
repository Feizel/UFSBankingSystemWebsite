@model UFSBankingSystemWebsite.Models.ViewModels.EditUserViewModel

<div class="container mt-4">
    <div class="card">
        <h2 class="card-title m-4 text-dark">Edit User</h2>
    </div>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    <form asp-action="AdminEditUser" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IDNumber" class="form-label"></label>
            <input asp-for="IDNumber" class="form-control" />
            <span asp-validation-for="IDNumber" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="IsActive" class="form-label">Is Active</label>
            <input type="checkbox" asp-for="IsActive" />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update User</button>
        <a asp-action="UserManagement" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}