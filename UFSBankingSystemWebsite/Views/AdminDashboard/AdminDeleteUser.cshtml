@model string // email or user ID

<div class="card">
    <h2 class="card-title m-4 text-dark">Delete User</h2>
</div>

<div class="container mt-4">
    <h3>Confirm Deletion</h3>
    <p>Are you sure you want to delete the user with email: <strong>@Model</strong>?</p>

    <form asp-action="AdminDeleteUser" method="post">
        <input type="hidden" name="email" value="@Model" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="UserManagement" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <script>
        // Optional: Add JavaScript confirmation dialog before form submission
        document.querySelector('form').onsubmit = function() {
            return confirm('Are you sure you want to delete this user? This action cannot be undone.');
        };
    </script>
}