@model AssignRoleViewModel

<h2>Assign Role to User</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<form asp-action="AssignRole" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>User Name: @Model.UserName</label>
    </div>

    <div class="form-group">
        <label>Email: @Model.Email</label>
    </div>

    <h4>Select Roles:</h4>
    @foreach (var role in Model.Roles)
    {
        <div class="form-check">
            <input type="checkbox" asp-for="SelectedRoles" value="@role.Name" class="form-check-input" />
            <label class="form-check-label">@role.Name</label>
        </div>
    }

    <button type="submit" class="btn btn-primary">Assign Roles</button>
</form>

<a asp-action="UserManagement" class="btn btn-secondary">Back to Manage Users</a>