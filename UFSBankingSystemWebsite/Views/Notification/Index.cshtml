@model IEnumerable<UFSBankingSystemWebsite.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
}

<h2 class="mb-4">Notifications</h2>

@if (!Model.Any())
{
    <p>No notifications available.</p>
}
else
{
    <ul class="list-group">
        @foreach (var notification in Model)
        {
            <li class="list-group-item">
                <strong>@notification.CreatedAt.ToString("dd/MM/yyyy"):</strong> @notification.Message
            </li>
        }
    </ul>
}